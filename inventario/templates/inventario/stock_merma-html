{% block scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const productoSelect = document.getElementById('{{ form.producto.id_for_label }}');
    const unidadDisplay = document.getElementById('unidad-display');
    
    // Actualizar unidad cuando cambia el producto
    productoSelect.addEventListener('change', function() {
        const selectedOption = this.options[this.selectedIndex];
        const unidad = selectedOption.getAttribute('data-unidad');
        unidadDisplay.textContent = unidad || '-';
    });
    
    // Inicializar con el valor por defecto
    if (productoSelect.selectedIndex >= 0) {
        const selectedOption = productoSelect.options[productoSelect.selectedIndex];
        const unidad = selectedOption.getAttribute('data-unidad');
        unidadDisplay.textContent = unidad || '-';
    }
});
</script>
{% endblock %}
